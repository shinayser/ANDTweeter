<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:weightSum="1">
    <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_width="wrap_content" android:text="What's happening?"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/posttweet_edit_text1" android:inputType="textMultiLine" android:maxLength="140">
        <requestFocus></requestFocus>
    </EditText>
    <Button android:layout_height="wrap_content" android:id="@+id/but_post_tweet" android:layout_width="match_parent" android:text="Tweet!"></Button>
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:orientation="vertical" android:weightSum="10">
        <CheckBox android:id="@+id/post_check_box" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Use you location"></CheckBox>
    </LinearLayout>
    
</LinearLayout>
